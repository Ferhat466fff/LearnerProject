@model List<LearnerProject.Models.Entities.Review>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Değerlednireme Sayfası</h2>

<table class="table table-bordered table-hover">

    <tr>
        <td>#</td>
        <td>Öğrenci</td>
        <td>Kurs Adı</td>
        <td>Açıklama</td>
        <td>Değerlendirme Puanı</td>
        <td>Sil</td>

    </tr>

    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@count</td>
    <td>@item.Student.NameSurname</td>
    <td>@item.Course.CourseName</td>
    <td>@item.Comment</td>
    <td>@item.ReviewValue</td>
    <td><a href="/Review/DeleteReview/@item.ReviewId" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</a></td>
</tr>
    }

</table>


